	<script>
		$(function () {
			$.ajax({
				url: "/User/GetMyInfo",
				contentType: "application/json",
				type: "POST", // 请求类型，通常是 GET 或 POST
				data: JSON.stringify({}),
				success: function (result) {
					if (result.ifSuccess) {
						if (result.data.userHead) {
							$("#user_profile").attr("src", result.data.userHead);
						}
					}
				},
				error: function (xhr, status, error) {
					console.error('Error:', error);
					console.log('Status:', status);
					console.log('Details:', xhr.responseText);
					if (xhr.status == 401) {
						window.top.location.href = '/Home/login?returnUrl=' + encodeURIComponent(window.location.pathname);
					}
				}
			});
			setInterval(check_new_msg, 10000);
			check_new_msg();
		});
		function check_new_msg() {
			$.ajax({
				url: "/Home/GetCommentGroups",
				contentType: "application/json",
				type: "POST", // 请求类型，通常是 GET 或 POST
				data: JSON.stringify({}),
				success: function (result) {
					if (result.ifSuccess) {
						var html = '';
						var totalCount = 0;
						result.data.forEach(function (item) {

							html += '<li><a thref="' + item.link + '" href="javascript:void(0)" title="' + item.tabName + '" class="newMesgClass">';
							//html += '<li><a class="J_menuItem" href="' + item.link + '">';
							html += '<div>';
							html += '<i class="fa fa-envelope fa-fw"></i> ' + item.newTypeName + item.count + '条未处理';
							html += '<span class="pull-right text-muted small">' + item.createTime + '</span>';
							html += '</div>';
							html += '</a></li>';
							html += '<li class="divider"></li>';
							totalCount += item.count;
						});
						$("#ul_mes_nodeal").html(html);
						$('.newMesgClass').on('click', menuItem);
						$("#ul_mes_nodeal_totalcount").text(totalCount);
					}
				},
				error: function (xhr, status, error) {
					console.error('Error:', error);
					console.log('Status:', status);
					console.log('Details:', xhr.responseText);
					if (xhr.status == 401) {
						window.top.location.href = '/Home/login?returnUrl=' + encodeURIComponent(window.location.pathname);
					}
				}
			});
		}

		function menuItem(menuName) {
			// 获取标识数据
			var dataUrl = $(this).attr('thref'),
				dataIndex = $(this).data('index'),
				menuName = $.trim($(this).attr('title')),
				flag = true;
			if (dataUrl == undefined || $.trim(dataUrl).length == 0) return false;

			// 选项卡菜单已存在
			$('.J_menuTab').each(function () {
				if ($(this).data('id') == dataUrl) {
					if (!$(this).hasClass('active')) {
						$(this).addClass('active').siblings('.J_menuTab').removeClass('active');
						// 显示tab对应的内容区
						$('.J_mainContent .J_iframe').each(function () {
							if ($(this).data('id') == dataUrl) {
								$(this).show().siblings('.J_iframe').hide();
								return false;
							}
						});
					}
					flag = false;
					return false;
				}
			});

			// 选项卡菜单不存在
			if (flag) {
				var str = '<a href="javascript:;" class="active J_menuTab" data-id="' + dataUrl + '">' + menuName + ' <i class="fa fa-times-circle"></i></a>';
				$('.J_menuTab').removeClass('active');

				// 添加选项卡对应的iframe
				var str1 = '<iframe class="J_iframe" name="iframe' + dataIndex + '" width="100%" height="100%" src="' + dataUrl + '" frameborder="0" data-id="' + dataUrl + '" seamless></iframe>';
				$('.J_mainContent').find('iframe.J_iframe').hide().parents('.J_mainContent').append(str1);

				//显示loading提示
				//            var loading = layer.load();
				//
				//            $('.J_mainContent iframe:visible').load(function () {
				//                //iframe加载完成后隐藏loading提示
				//                layer.close(loading);
				//            });
				// 添加选项卡
				$('.J_menuTabs .page-tabs-content').append(str);
			}
			return false;
		}
	</script>

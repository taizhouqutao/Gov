<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>红色代办一站式服务</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="title-container">
        <div class="left">“红色代办”一站式服务</div>
        <div class="right">
            <div class="weather-card">
                <div class="weather-title">
                    <a href="/Weather">今日天气</a></div>
                <div class="weather-condition">多云</div>
                <div class="weather-wind">东风</div>
                <div class="temperature">
                    <div class="current-temp">11℃</div>
                    <div class="low-temp">3℃</div>
                </div>
            </div>
            <div style="clear:both;"></div>
            <button class="content-button">返回</button>
        </div>
        <div style="clear:both;"></div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
        <div class="divider"></div>

        <div class="infinite-scroll-container">
            <button class="scroll-button scroll-left">&lt;</button>
            <div class="scroll-viewport">
                <div class="button-track">
                    <!-- 原始按钮 -->
                    <button class="content-button" onclick="window.location.href='/New'">党建之窗</button>
                    <button class="content-button" onclick="window.location.href='/New'">廉政建设</button>
                    <button class="content-button" onclick="window.location.href='/New'">意见收集</button>
                    <button class="content-button" onclick="window.location.href='/New'">政策咨询</button>
                    <button class="content-button" onclick="window.location.href='/New'">组织生活</button>
                    <button class="content-button" onclick="window.location.href='/New'">党员教育</button>
                    <button class="content-button" onclick="window.location.href='/New'">志愿服务</button>
                    <button class="content-button" onclick="window.location.href='/New'">通知公告</button>
                    
                    <!-- 克隆的按钮（用于循环效果） -->
                    <button class="content-button" onclick="window.location.href='/New'">党建之窗</button>
                    <button class="content-button" onclick="window.location.href='/New'">廉政建设</button>
                    <button class="content-button" onclick="window.location.href='/New'">意见收集</button>
                    <button class="content-button" onclick="window.location.href='/New'">政策咨询</button>
                </div>
            </div>
            <button class="scroll-button scroll-right">&gt;</button>
        </div>
        <div class="infinite-scroll-bottom-container">
            <button class="content-button zwlink">政务导航</button>
        </div>

        <div class="footer">
            © 2025 红色代办一站式服务
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const track = document.querySelector('.button-track');
            const buttons = document.querySelectorAll('.content-button');
            const scrollLeftBtn = document.querySelector('.scroll-left');
            const scrollRightBtn = document.querySelector('.scroll-right');
            const viewport = document.querySelector('.scroll-viewport');
            
            const buttonWidth = buttons[0].offsetWidth + 15; // 按钮宽度+间隙
            const originalButtons = buttons.length / 2; // 原始按钮数量（因为我们克隆了一组）
            let currentPosition = 0;
            
            // 右箭头点击 - 向右滚动
            scrollRightBtn.addEventListener('click', function() {
                currentPosition++;
                
                // 如果到达克隆部分的末尾，无缝跳回原始部分
                if (currentPosition > originalButtons) {
                    track.style.transition = 'none';
                    currentPosition = 1;
                    track.style.transform = `translateX(-${currentPosition * buttonWidth}px)`;
                    
                    // 强制重绘
                    void track.offsetWidth;
                    
                    track.style.transition = 'transform 0.5s ease';
                }
                
                track.style.transform = `translateX(-${currentPosition * buttonWidth}px)`;
            });
            
            // 左箭头点击 - 向左滚动
            scrollLeftBtn.addEventListener('click', function() {
                currentPosition--;
                
                // 如果到达开头，无缝跳到克隆部分
                if (currentPosition < 0) {
                    track.style.transition = 'none';
                    currentPosition = originalButtons - 1;
                    track.style.transform = `translateX(-${currentPosition * buttonWidth}px)`;
                    
                    // 强制重绘
                    void track.offsetWidth;
                    
                    track.style.transition = 'transform 0.5s ease';
                }
                
                track.style.transform = `translateX(-${currentPosition * buttonWidth}px)`;
            });
            
            // 初始化克隆按钮（也可以通过JavaScript动态克隆）
            function cloneButtons() {
                const originalButtons = track.querySelectorAll('.content-button');
                const cloneCount = Math.ceil(viewport.offsetWidth / buttonWidth) + 1;
                
                for (let i = 0; i < cloneCount; i++) {
                    const clone = originalButtons[i].cloneNode(true);
                    track.appendChild(clone);
                }
            }
            
            // 如果需要动态克隆，取消下面这行的注释
            //cloneButtons();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>